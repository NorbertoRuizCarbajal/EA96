import java.util.ArrayList;
import java.util.List;
import java.util.Arrays;

class Solution {
    public List<Boolean> kidsWithCandies(List<Integer> candies, int extraCandies) {
        int numMaximo = 0;

        for (int candy : candies) {
            if (candy > numMaximo) {
                numMaximo = candy;
            }
        }

        List<Boolean> resultado = new ArrayList<>();

        for (int candy : candies) {
            resultado.add(candy + extraCandies >= numMaximo);
        }

        return resultado;
    }
}

public class Main {
    public static void main(String[] args) {

        Solution solution = new Solution(); //

        List<Integer> candies = new ArrayList<>(Arrays.asList(2, 3, 5, 1, 3));
        int extraCandies = 3;

        List<Boolean> resultado = solution.kidsWithCandies(candies, extraCandies);

        System.out.println(resultado); //
    }
}